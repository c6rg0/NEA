{
	"compilerOptions": {
		"listEmittedFiles": true,
		"listFiles": true,
		"explainFiles": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
    		"target": "ES2020",
    		"module": "commonjs",
    		"outDir": "./",
    		"rootDir": "./src"
	},
  		"include": ["src/server.ts"],
  		"exclude": ["src/public/"]
}
