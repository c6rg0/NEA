{
	"compilerOptions": {
		"strict": true,
		"listEmittedFiles": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",

		"target": "ES2020",
    		"module": "commonjs",
    		"outDir": "./",
    		"rootDir": "./src"
	},
  		"include": ["src/server.ts", "src/routes"],
  		"exclude": ["src/public/"]
}



