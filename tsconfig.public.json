{
	"compilerOptions": {
		"strict": true,
		"listEmittedFiles": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",

		"target": "ES2020",
    		"module": "nodenext",
		"moduleResolution": "nodenext",
		"outDir": "./public/js/",
    		"rootDir": "./src/public/"
	},
  		"include": ["src/public/"],
  		"exclude": ["src/server.ts"]
}

